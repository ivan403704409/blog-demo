#文章表
create table article (
  id int not null auto_increment,
  title varchar(100) not null,
  content text not null,
  ctime datetime not null,
  utime datetime not null,
  uid int not null,
  primary key (id)
)

#用户表
create table user (
	id int not null auto_increment,
	name varchar(100) not null,
	email varchar(50),
	password varchar(20) not null,
	mobile int,
	primary key (id)
);